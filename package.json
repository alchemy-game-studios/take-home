{
  "name": "receipt-processor-api",
  "version": "0.0.1",
  "description": "A take-home submission for a receipt processing api.",
  "author": "Steve Hollinger",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "env:setup": "cp ./env/.env.example ./env/.env.development && cp ./env/.env.example ./env/.env.test",
    "bootstrap": "npm install && npx prisma generate && npm run env:setup",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start-local": "NODE_ENV=development nest start",
    "start": "node dist/main",
    "start-debug": "NODE_ENV=development nest start --debug --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "NODE_ENV=test jest --verbose",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:cov": "NODE_ENV=test jest --coverage",
    "test:debug": "NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "NODE_ENV=test jest --config ./jest-e2e.json",
    "docker:build": "docker build --build-arg NODE_ENV=development -t receipt-processor-api:latest .",
    "docker:run": "docker run -p 3000:3000 -t receipt-processor-api:latest",
    "docker:bootstrap": "NODE_ENV=development npm run docker:build && npm run docker:run"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@prisma/client": "^5.22.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.5",
    "express-openapi-validator": "^5.3.9",
    "js-yaml": "^4.1.0",
    "luxon": "^3.5.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.4.8",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/js-yaml": "^4.0.9",
    "@types/luxon": "^3.4.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "prisma": "^5.22.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "roots": [
      "src",
      "test"
    ],
    "modulePaths": [
      ""
    ],
    "testMatch": [
      "**/*.spec.ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
